<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bkhome"
    tools:context=".MainActivity">

    <!-- Top Bar with Welcome Text and Notification Icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi Wilson!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_notifications_24"
            android:contentDescription="Notifications"
            android:padding="8dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enjoy our services!"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingStart="16dp"/>

    <!-- Search Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:padding="16dp">

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Search here..."
            android:maxLength="1"
            android:drawableStart="@drawable/baseline_search_24"
            android:padding="12dp" />

        <ImageButton
            android:id="@+id/mic_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_btn_speak_now"
            android:contentDescription="Voice Search"
            android:layout_marginStart="8dp"/>

        <ImageButton
            android:id="@+id/camera_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/baseline_photo_camera_24"
            android:contentDescription="Camera Search"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Free Consultation Banner -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CFF2D0"
        android:padding="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free Consultation"
            android:textStyle="bold"
            android:textColor="@color/green1"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnCallNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call Now"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/green1" />

        <ImageView
            android:layout_marginStart="20dp"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:background="@drawable/contact_us"/>
    </LinearLayout>

    <!-- Featured Products -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Featured Products"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_margin="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
